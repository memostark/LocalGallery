<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. All configurations should inherit it -->
    <style name="BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">always</item>
    </style>

    <!-- Set light mode (default) configurations.
     Other configurations use it to customize their style (e.g. night configuration) -->
    <style name="AppTheme" parent="BaseTheme"/>

    <style name="SortDialogRadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


    <style name="DialogHiddenKeyboardStyle" parent="ThemeOverlay.App.BottomSheetDialog">
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

</resources>
